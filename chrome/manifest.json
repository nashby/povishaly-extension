{
  "manifest_version": 2,

  "name": "Povishaly",
  "version": "0.2.0",
  "description": "Shows price history on the real estate site https://r.onliner.by/",

  "permissions": [
    "https://povishaly.space"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": [
      "https://r.onliner.by/pk/apartments/*",
      "https://r.onliner.by/ak/apartments/*"
    ]
  }]
}
